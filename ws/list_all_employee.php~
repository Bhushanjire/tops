<?php

//http://localhost/OTHER/Angularjs/ws/list_all_employee.php
//http://localhost/OTHER/Angularjs/ws/list_all_employee.php?emp_id=1

require('config.php');
$data = array();
$result=array();
$emp_condition = '';
	
	//return single employee details
	if(isset($_REQUEST['emp_id'])){
		$emp_condition = "AND id='".$_REQUEST['emp_id']."'";
	}
	//return single employee details
	$query = "SELECT * FROM employee WHERE 1 $emp_condition";
	$res = mysql_query($query) or die(mysql_error());
	while($res1 = mysql_fetch_assoc($res)){

	$data['id'] =$res1['id'];
	$data['name'] =$res1['name'];
	$data['mobile'] =$res1['mobile'];
	$data['email'] =$res1['email'];
	array_push($result,$data);
}
echo json_encode($result);

	





