<?php

//http://localhost/OTHER/Angularjs/ws/update_employee.php?name=test1&mobile=77777777771&email=test1@gmail.com&id=7

require('config.php');
$result = array();
if(isset($_REQUEST['id'])){
$id = $_REQUEST['id'];	
$name = $_REQUEST['name'];
$mobile = $_REQUEST['mobile'];
$email = $_REQUEST['email'];

	$query = "UPDATE employee SET name='".$name."',mobile='".$mobile."',email='".$email."' WHERE id='".$id."'";
	$res = mysql_query($query) or(die(mysql_error()));

	if($res){
		$result['error_success'] = "Record updated";
	
}else{
$result['error_success'] = "Record not updated";
	}

echo json_encode($result);	

}


